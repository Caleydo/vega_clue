{
  "$schema": "https://vega.github.io/schema/vega/v3.json",
  "width": 800,
  "height": 600,
  "padding": 5,

  "data": [
    {
      "name": "gapminder",
      "values": []
    },
    {
      "name": "continents",
      "values": [
        {"id": 0, "name": "Africa"},
        {"id": 1, "name": "America"},
        {"id": 2, "name": "Asia"},
        {"id": 3, "name": "Europe"}
      ]
    },
    {
      "name": "main_religion",
      "values": [
        {"id": 0, "name": "Christian"},
        {"id": 1, "name": "Eastern religions"},
        {"id": 2, "name": "Muslim"},
        {"id": 3, "name": "Not Categorized"}
      ]
    },
    {
      "name": "thisYear",
      "source": "gapminder",
      "transform": [
        {"type": "filter", "expr": "datum.year == currentYear"}
      ]
    },
    {
      "name": "countries",
      "source": "gapminder",
      "transform": [
        {"type": "aggregate", "groupby": ["country"]}
      ]
    },
    {
      "name": "interpolate",
      "source": "countries",
      "transform": [
        {
          "type": "lookup",
          "from": "thisYear", "key": "country",
          "fields": ["country"], "as": ["this"],
          "default": {}
        },
        {
          "type": "formula",
          "as": "fertility",
          "expr": "datum.this.fertility"
        },
        {
          "type": "formula",
          "as": "life_expect",
          "expr": "datum.this.life_expect"
        }
      ]
    },
    {
      "name": "trackCountries",
      "on": [
        {"trigger": "active", "toggle": "{country: active.country}"}
      ]
    }
  ],

  "signals": [
    {
      "name": "active",
      "value": {},
      "on": [
        {"events": "@point:mousedown, @point:touchstart", "update": "datum"},
        {"events": "window:mouseup, window:touchend", "update": "{}"}
      ]
    },
    {
      "name": "currentYear",
      "value": 1980,
      "on":[{
        "events": "mousemove, touchmove",
        "update": "currentYear"
      }],
      "bind": {"input": "range", "min": 1800, "max": 2015, "step": 1}
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear", "nice": true,
      "domain": {"data": "gapminder", "field": "fertility"},
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear", "nice": true, "zero": false,
      "domain": {"data": "gapminder", "field": "life_expect"},
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "gapminder", "field": "continent"},
      "range": "category"
    },
    {
      "name": "label",
      "type": "ordinal",
      "domain": {"data": "continents", "field": "id"},
      "range": {"data": "continents", "field": "name"}
    }
  ],

  "axes": [
    {
      "title": "Fertility",
      "orient": "bottom", "scale": "x",
      "grid": true, "tickCount": 5
    },
    {
      "title": "Life Expectancy",
      "orient": "left", "scale": "y",
      "grid": true, "tickCount": 5
    }
  ],

  "legends": [
    {
      "fill": "color",
      "title": "Continent",
      "orient": "right",
      "encode": {
        "symbols": {
          "enter": {
            "fillOpacity": {"value": 0.5}
          }
        },
        "labels": {
          "update": {
            "text": {"scale": "label", "field": "value"}
          }
        }
      }
    }
  ],

  "marks": [
    {
      "type": "text",
      "encode": {
        "update": {
          "text": {"signal": "currentYear"},
          "x": {"value": 300},
          "y": {"value": 300},
          "fill": {"value": "grey"},
          "fillOpacity": {"value": 0.25},
          "fontSize": {"value": 100}
        }
      }
    },
    {
      "name": "point",
      "type": "symbol",
      "from": {"data": "interpolate"},
      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "this.continent"},
          "size": {"value": 150}
        },
        "update": {
          "x": {"scale": "x", "field": "fertility"},
          "y": {"scale": "y", "field": "life_expect"},
          "fillOpacity": [
            {
              "test": "indata('trackCountries', 'country', datum.country)",
              "value": 1
            },
            {"value": 0.5}
          ]
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "interpolate"},
      "interactive": false,
      "encode": {
        "enter": {
          "fill": {"value": "#333"},
          "fontSize": {"value": 14},
          "fontWeight": {"value": "bold"},
          "text": {"field": "country"},
          "align": {"value": "center"},
          "baseline": {"value": "bottom"}
        },
        "update": {
          "x": {"scale": "x", "field": "fertility"},
          "y": {"scale": "y", "field": "life_expect", "offset": -7},
          "fillOpacity": [
            {
              "test": "indata('trackCountries', 'country', datum.country)",
              "value": 0.8
            },
            {"value": 0}
          ]
        }
      }
    }
  ]
}
